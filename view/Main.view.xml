<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="ref.ui5.friends.view.Main" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Friends">
	<subHeader>
      <Toolbar>
        <SearchField
          liveChange="onSearch"
          width="100%" />
      </Toolbar>
    </subHeader>
		<content>
		<List id='list' mode='SingleSelectMaster' select="handleSelect">
		    <items>
		         <FeedListItem
          sender="{name}"
          icon="{picture/data/url}" />
		  </items>
		    </List>
		</content>
		<footer>
            <Bar>
            </Bar>
          </footer>
	</Page>
</core:View>